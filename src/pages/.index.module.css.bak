/* Mobile adjustments */
@media screen and (max-width: 966px) {
  .heroBanner {
    padding: 1rem 0 !important;
    max-height: none !important; /* Ensure all elements are visible on mobile */
  }

  .sponsorAlertContainer {
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 2rem; /* Adjusted for mobile */
  }

  .sponsorLogo {
    width: 40px; /* Slightly smaller on mobile */
  }

  .weeklySponsor {
    font-size: 0.7rem !important; /* Slightly smaller on mobile */
    margin-bottom: 0.1rem; /* Adjust spacing for mobile */
  }

  .alertBox {
    font-size: 0.9rem !important;
    padding: 0.2rem 0.8rem; /* Further reduced for mobile */
  }

  .heroTitle {
    font-size: 2.5rem !important;
  }

  .hero__subtitle {
    font-size: 1.4rem !important;
  }

  .topTrendsTable {
    top: 0.5rem;
    left: calc(50% + 100px);
    font-size: 0.6rem !important;
  }

  .topTrendsTable th {
    font-size: 0.5rem !important;
  }

  .verticalLabel {
    font-size: 0.5rem !important;
    padding-right: 0.1rem;
  }

  .topTrendsTable td,
  .topTrendsTable th {
    padding: 0.1rem 0.3rem;
  }

  .lastWeekCell {
    padding-right: 0.3rem;
    border-right: 1px solid rgba(245, 245, 220, 0.5) !important;
  }

  .tickerContainer {
    margin-top: 1.5rem; /* Adjusted for mobile */
  }

  .tooltip {
    font-size: 0.7rem !important;
    padding: 0.7rem !important;
    max-width: 150px;
  }

  .tooltipClose {
    font-size: 0.7rem !important;
    top: 0.1rem;
    left: 0.1rem;
  }

  .tooltipSubscribe {
    font-size: 0.6rem !important;
  }

  .tickerLabel {
    font-size: 1rem;
  }

  .tickerWrapper,
  .secondNewsBar,
  .thirdNewsBar {
    height: 3.5rem !important;
  }

  .tickerItem {
    font-size: 0.9rem;
    padding: 0.4rem 0;
  }

  .tickerTitle {
